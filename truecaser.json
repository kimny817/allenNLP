{
  "dataset_reader":{
    "type": "sequence_tagging",
  //  "token_indexers" : {
    //  "tokens": {
     //   "type": "single_id"
    //  }
    //},
   // "word_splitter":{
    //  "type": "just_spaces"
   // }
  },
  "train_data_path": "data/train.txt",
  "validation_data_path": "data/train.txt",
  "test_data_path": "data/test.txt",
  "evaluate_on_test" : true,
  "model": {
    "type": "truecaser",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 50,
          "trainable": true
        }
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 50,
      "hidden_size": 150,
      "num_layers": 2,
      "bidirectional" : true,
      "dropout" : 0.25
    },
  },
  "iterator": {
    "type": "basic",
    "batch_size": 1
  },
  "trainer": {
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    },
    "validation_metric": "+f1",
    "num_serialized_models_to_keep": 3,
    "num_epochs": 1,
    "grad_norm": 5.0,
    "patience": 25,
    "cuda_device": -1
  }
}
