{
    "dataset_reader": {
        "type": "sequence_tagging"
    },
    "iterator": {
        "type": "basic",
        "batch_size": 64
    },
    "model": {
        "type": "truecaser",
        "encoder": {
            "type": "lstm",
            "bidirectional": true,
            "dropout": 0.25,
            "hidden_size": 150,
            "input_size": 50,
            "num_layers": 2
        },
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 50,
                    "trainable": true
                }
            }
        }
    },
    "train_data_path": "data/tmp.txt",
    "validation_data_path": "data/tmp.txt",
    "test_data_path": "data/tmp.txt",
    "trainer": {
        "cuda_device": -1,
        "grad_norm": 5,
        "num_epochs": 75,
        "num_serialized_models_to_keep": 3,
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "patience": 25,
        "validation_metric": "+f1"
    },
    "evaluate_on_test": true
}